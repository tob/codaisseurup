<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.listing_name %></div>

  <div class="panel-body">

    <p>Address: <%= @event.address %></p>
    <p>Host: <%= @event.user.email %></p>

    <!-- Main Info -->
    <h4>Main Info</h4>
    <p>Home Type: <%= @event.home_type %></p>
    <p><%= @event.accommodate %> <%= @event.accommodate > 1 ? "Guests" : "Guest" %></p>
    <p><%= @event.bedevent_count %> <%= @event.bedevent_count > 1 ? "Bedevents" : "Bedevent" %></p>
    <p><%= @event.bathevent_count %> <%= @event.bathevent_count > 1 ? "Bathevents" : "Bathevent" %></p>

    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>

    <!-- Amenities -->
    <h4>Amenities</h4>
    <ul class="amenities">
      <li><%= !@event.has_tv ? ("<s>TV</s>").html_safe : "TV" %></li>
      <li><%= !@event.has_kitchen ? ("<del>Kitchen</del>").html_safe : "Kitchen" %></li>
      <li><%= !@event.has_internet ? ("<del>Internet</del>").html_safe : "Internet" %></li>
      <li><%= !@event.has_heating ? ("<del>Heating</del>").html_safe : "Heating" %></li>
      <li><%= !@event.has_airco ? ("<del>Air Conditioning</del>").html_safe : "Air Conditioning" %></li>
    </ul>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
